<div class="max-w-2xl mx-auto px-4 py-8 font-sans">
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Edit Feedback for "<span class="text-indigo-600"><%= @episode.name %></span>"</h2>
    
    <%= form_with(model: @feedback, 
                url: podcast_feedback_path(@episode.id, @feedback), 
                method: :patch, 
                local: true, 
                class: "space-y-6") do |f| %>
      <div class="space-y-2">
        <%= f.label :rating, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :rating, 
            options_for_select(1..5, @feedback.rating),
            {},
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
      
      <div class="space-y-2">
        <%= f.label :comment, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :comment, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 h-32" %>
      </div>
      
      <div class="flex items-center justify-between pt-4">
        <%= link_to 'Back to Podcast', 
            podcast_path(@feedback.podcast_id), 
            class: "text-gray-600 hover:text-gray-800 transition-colors" %>
            
        <%= f.submit "Update Feedback", 
            class: "px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-600 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>