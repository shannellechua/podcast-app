<div class="podcast-details">
  <h2 class="episode-title">Edit Feedback for <%= @episode.name %></h2>
  
  <div class="feedback-form">
    <% if user_signed_in? %>
      <p class="current-user">Editing feedback as: <span><%= current_user.email %></span></p>
    <% end %>

    <%= form_with(model: @feedback, 
                  url: podcast_feedback_path(@episode.id, @feedback), 
                  method: :patch, 
                  local: true, 
                  class: "feedback-form") do |f| %>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.select :rating, options_for_select(1..5, @feedback.rating), class: "rating-select" %>
      </div>
      
      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_area :comment, class: "comment-textarea" %>
      </div>
      
      <%= f.submit "Update Feedback", class: "submit-button" %>
    <% end %>
    
    <%= link_to 'Back to Podcast', podcast_path(@feedback.podcast_id), class: "button" %>
  </div>
</div>