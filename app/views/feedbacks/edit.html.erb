<h2>Edit Feedback for <%= @episode.name %></h2>

<%= form_with(model: @feedback, url: podcast_feedback_path(@feedback), method: :patch, local: true) do |f| %>
  <div class="field">
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select(1..5, @feedback.rating) %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <%= f.submit "Update Feedback" %>
<% end %>

<%= link_to 'Back to Podcast', podcast_path(@feedback.podcast_id) %>