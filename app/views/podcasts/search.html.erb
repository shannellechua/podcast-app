<div class="max-w-4xl mx-auto p-4">
  <%= form_with url: podcasts_path, method: :get, local: true, class: "mb-8" do |form| %>
    <div class="flex flex-col gap-2">
      <%= form.label :search, "Search for Podcasts", class: "text-lg font-medium" %>
      <%= form.text_field :search, class: "border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 outline-none" %>
      <%= form.submit "Search", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors mt-2" %>
    </div>
  <% end %>

  <% if @podcast.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @podcast.each do |pod| %>
        <div class="bg-white rounded-lg shadow-md p-4">
          <%= link_to pod.name, podcast_path(id: pod.id), class: "text-xl font-bold hover:text-blue-500 mb-4 block" %>
          
          <div class="w-full">
            <iframe
              style="border-radius:12px"
              src="https://open.spotify.com/embed/episode/<%= pod.id %>"
              width="100%"
              height="152"
              frameborder="0"
              allowfullscreen=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy">
            </iframe>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>