<%= form_with url: podcasts_path, method: :get, local: true do |form| %>
  <%= form.label :search, "Search for Podcasts" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<% if @podcast.present? %>
  <div class="podcasts-grid">
    <% @podcast.each do |pod| %>
      <div class="podcast-card">
        <% if pod.images.present? %>
          <%= image_tag pod.images.first["url"], alt: pod.name, class: "podcast-thumbnail" %>
        <% end %>
        <%= link_to pod.name, podcast_path(id: pod.id), class: "podcast-title" %>
      </div>
    <% end %>
  </div>
<% end %>