<%= form_with url: podcasts_path, method: :get, local: true do |form| %>
  <%= form.label :search, "Search for Podcasts" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<% if @podcast.present? %>
  <% @podcast.each do |pod| %>
    <p>Name: <%= link_to pod.name, podcast_path(id: pod.id) %> </p> 
    <p>Uri: <%= pod.uri %></p>
    <p>Description: <%= pod.description %></p>
  <% end %>
<% end %>
